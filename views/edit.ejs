    <% include nav %>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>Don't ever underestimate the heart of a champion!</h1>

                <!-- Author -->
                <p class="lead">
                    declared <a href="https://en.wikipedia.org/wiki/Rudy_Tomjanovich">Rudy Tomjanovich</a>
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> <span id="postDate">Posted on August 24, 2013 at 9:00 PM</span></p>

                <hr>

                <!-- Preview Image -->
                <!-- <img class="img-responsive" src="http://placehold.it/900x300" alt=""> -->
                <img class="img-responsive" src="/images/daybreak.jpg" alt="daybreak">

                <hr>

    <form class="form-horizontal" action="/edit/<%= article.username %>/<%= article.date.day %>/<%= article.title %>" method="post">
      <fieldset>
        <div id="legend" class="form-group">
          <legend class="col-sm-2 control-label">编辑博文</legend>
        </div>
        <div class="form-group">
          <label for="firstname" class="col-sm-2 control-label">标题</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="title" value="<%= article.title %>" placeholder="标题">
          </div>
        </div>
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">正文</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="text" rows="10"><%- article.body %></textarea>
          </div>
        </div>
        <div class="form-group">
          <label for="" class="col-sm-2 control-label"></label>
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">
              发表
            </button>
          </div>
        </div>
      </fieldset>
    </form>

                <hr>              

            </div>

